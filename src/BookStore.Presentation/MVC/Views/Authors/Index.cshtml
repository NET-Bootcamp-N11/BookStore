@using BookStore.Domain.Entities
@model List<Author>

@{
    ViewData["Title"] = "Authors";
}

<a asp-controller="Authors" asp-action="Create" class="btn btn-primary">
    <i class='bx bx-plus'></i>
</a>

<form asp-controller="Authors" asp-action="Index" method="get" class="d-flex mt-3">
    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="searchString">
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>

<table class="table table-borderless">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Full name</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < Model.Count; i++)
        {
            var rowNumber = i + 1;
            <tr>
                <th scope="row">@rowNumber</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].Description</td>
                <td>
                    <a asp-controller="Authors" asp-action="DeleteAuthor" asp-route-id="@Model[i].Id" class="btn btn-danger">
                        <i class='bx bxs-trash'></i>
                    </a>

                    <a asp-controller="Authors" asp-action="Update" asp-route-id="@Model[i].Id" class="btn btn-secondary">
                        <i class='bx bxs-edit-alt'></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
