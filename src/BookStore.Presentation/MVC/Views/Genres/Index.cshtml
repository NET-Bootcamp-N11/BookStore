@using BookStore.Domain.Entities;
@model List<Genre> 

<form id="searchForm" class="d-flex gap-2 mb-5" asp-controller="Genres" asp-action="SearchByGenreName" method="get">
    <input type="search" id="searchInput" class="form-control" aria-describedby="search" name="name" placeholder="Enter Genre name...">
</form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const savedQuery = localStorage.getItem('searchQuery');
        if (savedQuery) {
            document.getElementById('searchInput').value = savedQuery;
        }
        document.getElementById('searchInput').focus();
        document.getElementById('searchInput').addEventListener('input', function () {
            const inputValue = this.value.trim();
            if (inputValue !== '') {
                localStorage.setItem('searchQuery', inputValue);
                document.getElementById('searchForm').submit();
            }
        });
    });
</script>



<br />
<a asp-controller="Genres" asp-action="Create" class="btn btn-primary" >
    <i class='bx bx-plus'></i>
</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">T/R</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            int list_cnt = i+1;
            <tr>
                <th>@list_cnt</th>
                <td>@Model[i].Name</td>
                <td>
                    <a asp-controller="Genres" asp-action="DeleteGenre" asp-route-id="@Model[i].Id" class="btn btn-danger">
                        <i class='bx bxs-trash'></i>
                    </a>
                    <a asp-controller="Genres" asp-action="Update" asp-route-id="@Model[i].Id" class="btn btn-secondary">
                        <i class='bx bxs-edit-alt'></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>