@using BookStore.Domain.Entities;
@model List<Genre> 

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @for (int i = 0; i < Model.Count; i++)
        {
            int list_cnt = i+1;
            <tr>
                <th>@list_cnt</th>
                <td>@Model[i].Name</td>
                <td>
                    <a asp-controller="Genres" asp-action="DeleteGenre" asp-route-id="@Model[i].Id" class="btn btn-danger">
                        <i class='bx bxs-trash'></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Genres" asp-action="Create" class="btn btn-primary  d-block">
    <i class='bx bx-plus'></i>
</a>