@model MVC.Models.BooksUpdateBookViewModel

<form enctype="multipart/form-data" asp-controller="Books" asp-action="Update" method="post">
    <div class="mb-3">
        <label asp-for="@Model.book.Title" class="form-label">Title</label>
        <input asp-for="@Model.book.Title" type="text" class="form-control" placeholder="Enter title ..." required>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.book.Price" class="form-label">Price</label>
        <input asp-for="@Model.book.Price" type="text" class="form-control" placeholder="Enter price ..." required>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.book.Description" class="form-label">Description</label>
        <textarea asp-for="@Model.book.Description" class="form-control" rows="3" required></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.newPdfFile" class="form-label">New PDF File</label>
        <input asp-for="@Model.newPdfFile" class="form-control" type="file" id="newPdfFile" name="newPdfFile">
    </div>

    <div class="mb-3">
        <label asp-for="@Model.book.AuthorId" class="form-label">Author</label>
        <select asp-for="@Model.book.AuthorId" class="form-select" required>
            <option value="" disabled selected>Select an author</option>
            @foreach (var author in Model.authors)
            {
                <option value="@author.Id">@author.Name</option>
            }
        </select>
    </div>

    <table>
        <tr>
            @foreach (var item in Model.CheckedBoxes)
            {
                <td style="padding:5px;">
                    <label><input type="checkbox" value="@item.Id" checked="@item.IsChecked" name="ids" id="@item.Id" /> @Html.Raw(@item.Name)</label>
                </td>
            }
        </tr>
    </table>

    <button class="btn btn-primary mt-1" type="submit">Save Changes</button>
</form>
