@using BookStore.Domain.Entities
@model List<Book>

@{
    ViewData["Title"] = "Book";
}

<form class="d-flex gap-2">
    <input type="search" class="form-control" aria-describedby="search" name="searchString">
    <button asp-controller="Books" asp-action="Create" formmethod="get" type="submit" class="btn btn-primary">Submit</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">T/R</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
    @for(var i = 1; i < Model.Count; i++)
    {
        <tr>
            <td scope="row">@i</td>
            <td>@Model[i - 1].Title</td>
            <td>@Model[i - 1].Author.Name</td>

            <td>
                <a asp-controller="Home" asp-action="Delete" asp-route-id=@Model[i].Id class="btn btn-danger">
                    <i class='bx bxs-trash'></i>
                </a>
                <a asp-controller="Books" asp-action="Update" asp-route-id="@Model[i].Id" class="btn btn-secondary">
                    <i class='bx bxs-edit-alt'></i>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
