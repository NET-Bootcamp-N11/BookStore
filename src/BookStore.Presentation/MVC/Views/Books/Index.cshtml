@using BookStore.Domain.Entities
@model List<Book>

@{
    ViewData["Title"] = "Book";
}

<form id="searchForm" class="d-flex gap-2 mb-5" asp-controller="Books" asp-action="SearchBookByTitle" method="get">
    <input type="search" id="searchInput" class="form-control" aria-describedby="search" name="title" placeholder="Enter Book title...">
</form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const savedQuery = localStorage.getItem('searchQuery');
        if (savedQuery) {
            document.getElementById('searchInput').value = savedQuery;
        }
        document.getElementById('searchInput').focus();
        document.getElementById('searchInput').addEventListener('input', function () {
            const inputValue = this.value.trim();
            if (inputValue !== '') {
                localStorage.setItem('searchQuery', inputValue);
                document.getElementById('searchForm').submit();
            }
        });
    });
</script>



<br />
<a asp-controller="Books" asp-action="Create" class="btn btn-primary">
    <i class='bx bx-plus'></i>
</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">T/R</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">More Info</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @for (var i = 0; i < Model.Count; i++)
        {
            var rowNumber = i + 1;
            <tr>
                <th scope="row">@rowNumber</th>
                <td>@Model[i].Title</td>
                <td>@Model[i].Author.Name</td>
                <td>
                    <a asp-controller="Books" asp-action="MoreInfo" asp-route-id="@Model[i].Id" class="btn btn-link">
                        <i class='bx bx-show'></i>
                    </a>
                </td>
                <td>
                    <a asp-controller="Books" asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-danger">
                        <i class='bx bxs-trash'></i>
                    </a>
                    <a asp-controller="Books" asp-action="Update" asp-route-id="@Model[i].Id" class="btn btn-secondary">
                        <i class='bx bx-edit-alt'></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
