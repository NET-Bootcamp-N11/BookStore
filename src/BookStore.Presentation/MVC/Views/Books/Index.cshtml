@using BookStore.Domain.Entities
@model List<Book>

@{
    ViewData["Title"] = "Book";
}

<a asp-controller="Books" asp-action="Create" class="btn btn-primary">
    <i class='bx bx-plus'></i>
</a>

<form asp-action="Index" method="get" class="d-flex mt-3">
    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="searchString">
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">T/R</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @for (var i = 0; i < Model.Count; i++)
        {
            var rowNumber = i + 1;
            <tr>
                <th scope="row">@rowNumber</th>
                <td>@Model[i].Title</td>
                <td>@Model[i].Author.Name</td>
                <td>
                    <a asp-controller="Books" asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-danger">
                        <i class='bx bxs-trash'></i>
                    </a>
                    <a asp-controller="Books" asp-action="Update" asp-route-id="@Model[i].Id" class="btn btn-warning">
                        <i class='bx bxs-pencil'></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
