@using BookStore.Domain.Entities;
@model BasketViewModel;

<div class="row">
    <div class="col-8">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Photo</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Count</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Items.Count; i++)
                {
                    <tr>
                        <th>
                            <img class="cart-photo" src="@Model.Items[i].Book.PhotoPath" alt="Photo path"/>
                        </th>
                        <th>@Model.Items[i].Book.Title</th>
                        <td>@Model.Items[i].Book.Price</td>
                        <td>@Model.Items[i].Count</td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Cart" asp-action="Clear" class="btn btn-danger">Clear</a>
    </div>

    <div class="col-4">
        <div class="order-menu py-5">
            <div class="text-center">
                Total price: @Model.TotalPrice so'm
            </div>
            <div class="text-center">
                <a asp-controller="Cart" asp-action="CreateOrder" class="btn btn-success">Order</a>
            </div>
        </div>
    </div>
</div>