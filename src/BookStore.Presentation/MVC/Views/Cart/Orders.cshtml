@using BookStore.Domain.Entities
@model List<Order>;

<table class="table">
    <thead>
        <tr>
            <th scope="col">T/R</th>
            <th scope="col">Datetime</th>
            <th scope="col">Total Price</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            var rowNumber = i+1;
            <tr>
                <th>@rowNumber</th>
                <td>@Model[i].CreatedDate</td>
                <td>@Model[i].TotalPrice so'm</td>
            </tr>
        }
    </tbody>
</table>